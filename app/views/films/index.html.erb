<h1 class="text-5xl font-bold mb-4">Фильмы</h1>

<% if @films.count.zero? %>
  <p>Фильмы отсутствуют</p>
<% else %>
  <table class="min-w-full">
    <thead>
    <tr>
      <th class="py-2">Название</th>
      <th class="py-2">Действия</th>
    </tr>
    </thead>
    <tbody>
    <% @films.each do |film| %>
      <tr>
        <td class="py-2"><%= link_to film.title, film %></td>
        <td class="py-2">
          <%= link_to "Редактировать", edit_film_path(film), class: "text-blue-500 hover:text-blue-700 font-semibold mr-2" %>
          <%= button_to "Удалить", film, method: :delete, data: { confirm: "Вы уверены?" }, class: "text-red-500 hover:text-red-700 font-semibold" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to "Добавить фильм", new_film_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mt-4 inline-block" %>
