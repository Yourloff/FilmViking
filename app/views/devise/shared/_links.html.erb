<% extend Devise::Controllers::Helpers %>

<% if user_signed_in? %>
  <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
<% else %>
  <%= link_to 'Sign up', new_user_registration_path, class: 'border p-2 hover:bg-sky-500/75 hover:shadow-md hover:text-gray-50' %>
  <%= link_to 'Sign in', new_user_session_path, class: 'border p-2 hover:bg-sky-500/75 hover:shadow-md hover:text-gray-50' %>
<% end %>
